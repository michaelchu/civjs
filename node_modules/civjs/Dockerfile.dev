FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (use npm install for dev to handle new packages)
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 3000

# Start development server with hot reload enabled
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]