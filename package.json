{
  "name": "civjs-monorepo",
  "version": "1.0.0",
  "description": "CivJS - A modern civilization game built with TypeScript, React, and Node.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd apps/client && npm run dev",
    "dev:server": "cd apps/server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd apps/client && npm run build",
    "build:server": "cd apps/server && npm run build",
    "start:prod": "cd apps/server && npm run start:prod",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd apps/client && npm run test",
    "test:server": "cd apps/server && npm run test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd apps/client && npm run lint",
    "lint:server": "cd apps/server && npm run lint",
    "lint:fix": "npm run lint:fix:client && npm run lint:fix:server",
    "lint:fix:client": "cd apps/client && npm run lint:fix",
    "lint:fix:server": "cd apps/server && npm run lint:fix",
    "format": "npm run format:client && npm run format:server",
    "format:client": "cd apps/client && npm run format",
    "format:server": "cd apps/server && npm run format",
    "format:check": "npm run format:check:client && npm run format:check:server",
    "format:check:client": "cd apps/client && npm run format:check",
    "format:check:server": "cd apps/server && npm run format:check",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "cd apps/client && npm run type-check",
    "typecheck:server": "cd apps/server && npm run type-check",
    "clean": "cd apps/client && npm run clean && cd ../server && npm run clean && rm -rf node_modules",
    "docker:up": "docker-compose up",
    "docker:build": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^9.1.7",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:michaelchu/civjs.git"
  },
  "keywords": [
    "civilization",
    "game",
    "typescript",
    "react",
    "nodejs",
    "socket.io",
    "canvas",
    "freeciv"
  ],
  "author": "Michael Chu",
  "license": "MIT",
  "dependencies": {
    "zod": "^4.1.5"
  }
}
