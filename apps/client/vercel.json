{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "civjs-client",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "framework": "vite",
  "ignoreCommand": "bash -c 'git diff --quiet origin/master...HEAD -- apps/client/ package.json package-lock.json turbo.json \"*/vercel.json\"'",
  "env": {
    "VITE_SERVER_URL": "https://civjs-server.vercel.app"
  },
  "build": {
    "env": {
      "VITE_SERVER_URL": "https://civjs-server.vercel.app"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
