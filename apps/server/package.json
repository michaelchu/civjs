{
  "name": "civjs-server",
  "version": "1.0.0",
  "description": "A modern Civilization-inspired game server built with TypeScript, Express, and Socket.IO",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "echo 'Starting migration...' && npm run db:migrate && echo 'Migration complete, starting server...' && node dist/index.js",
    "start:prod": "npm run db:migrate:prod && node dist/index.js",
    "vercel-build": "npm run db:push:force && npm run build",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json} tests/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json} tests/**/*.{ts,js,json}",
    "lint-staged": "lint-staged",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production tsx src/scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "prepare": "is-ci || husky"
  },
  "keywords": [
    "game",
    "server",
    "civilization",
    "strategy",
    "multiplayer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "is-ci": "^3.0.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "prisma": "^6.14.0",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "vite-node": "^2.1.8",
    "winston": "^3.17.0",
    "zod": "^4.0.17"
  }
}