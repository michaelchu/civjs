# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Supabase)
# Get from: https://app.supabase.com/project/YOUR_PROJECT/settings/database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Redis Configuration (Upstash)
# Get from: https://console.upstash.com/redis/YOUR_DATABASE
REDIS_URL=rediss://default:YOUR_TOKEN@YOUR_ENDPOINT.upstash.io:6380

# CORS Configuration (your frontend URL)
SOCKET_CORS_ORIGIN=https://your-civjs-client.vercel.app

# Game Configuration
MAX_PLAYERS_PER_GAME=8
TURN_TIMEOUT_SECONDS=120
AUTO_SAVE_INTERVAL_TURNS=10
MIN_PLAYERS_TO_START=1
MAX_GAMES=100

# Map Configuration
MAP_WIDTH=80
MAP_HEIGHT=50
MIN_CITY_DISTANCE=3

# Logging
LOG_LEVEL=info