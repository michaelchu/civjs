{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build:server"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd apps/server && npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "envVars": {
    "NODE_ENV": "production",
    "PORT": "${{PORT}}",
    "DATABASE_URL": "${{DATABASE_URL}}",
    "REDIS_URL": "${{REDIS_URL}}",
    "SOCKET_CORS_ORIGIN": "${{RAILWAY_STATIC_URL}}"
  }
}