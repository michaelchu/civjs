{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"]
    }
  },
  "globalDependencies": [
    "**/*.env.*local",
    ".env",
    ".env.local"
  ],
  "globalEnv": [
    "NODE_ENV",
    "VITE_SERVER_URL"
  ]
}